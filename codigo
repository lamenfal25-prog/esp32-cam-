// LIBRERÍAS PRINCIPALES 

// Librería generada por Edge Impulse (modelo de detección)
#include <objetos_inferencing.h>

// Librerías para procesar imágenes y usar la cámara ESP32-CAM
#include "edge-impulse-sdk/dsp/image/image.hpp"
#include "esp_camera.h"

#define CAMERA_MODEL_AI_THINKER // Módulo físico utilizado

// CONFIGURACIÓN DE PINES DE LA ESP32-CAM AI THINKER 
#if defined(CAMERA_MODEL_AI_THINKER)
#define PWDN_GPIO_NUM 32
#define RESET_GPIO_NUM -1
#define XCLK_GPIO_NUM 0
#define SIOD_GPIO_NUM 26
#define SIOC_GPIO_NUM 27

#define Y9_GPIO_NUM 35
#define Y8_GPIO_NUM 34
#define Y7_GPIO_NUM 39
#define Y6_GPIO_NUM 36
#define Y5_GPIO_NUM 21
#define Y4_GPIO_NUM 19
#define Y3_GPIO_NUM 18
#define Y2_GPIO_NUM 5
#define VSYNC_GPIO_NUM 25
#define HREF_GPIO_NUM 23
#define PCLK_GPIO_NUM 22
#else
#error "Camera model not selected"
#endif

// Tamaño del frame crudo que usará Edge Impulse
#define EI_CAMERA_RAW_FRAME_BUFFER_COLS 320
#define EI_CAMERA_RAW_FRAME_BUFFER_ROWS 240
#define EI_CAMERA_FRAME_BYTE_SIZE 3

//  LIBRERÍAS PARA LA PANTALLA OLED I2C 
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

#define I2C_SDA 15   // Pin SDA OLED
#define I2C_SCL 14   // Pin SCL OLED
TwoWire I2Cbus = TwoWire(0);

#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define OLED_RESET -1
#define SCREEN_ADDRESS 0x3C   // Dirección del OLED
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &I2Cbus, OLED_RESET);

//  PINES DE LEDS PARA INDICAR ESTADO DE DETECCIÓN 
#define LED_AZUL 12
#define LED_VERDE 13
#define LED_ROJO 2

// Variables internas de Edge Impulse
static bool debug_nn = false;
static bool is_initialised = false;
uint8_t *snapshot_buf;

//  CONFIGURACIÓN DE LA CÁMARA 
static camera_config_t camera_config = {
  .pin_pwdn = PWDN_GPIO_NUM,
  .pin_reset = RESET_GPIO_NUM,
  .pin_xclk = XCLK_GPIO_NUM,
  .pin_sscb_sda = SIOD_GPIO_NUM,
  .pin_sscb_scl = SIOC_GPIO_NUM,

  .pin_d7 = Y9_GPIO_NUM,
  .pin_d6 = Y8_GPIO_NUM,
  .pin_d5 = Y7_GPIO_NUM,
  .pin_d4 = Y6_GPIO_NUM,
  .pin_d3 = Y5_GPIO_NUM,
  .pin_d2 = Y4_GPIO_NUM,
  .pin_d1 = Y3_GPIO_NUM,
  .pin_d0 = Y2_GPIO_NUM,
  .pin_vsync = VSYNC_GPIO_NUM,
  .pin_href = HREF_GPIO_NUM,
  .pin_pclk = PCLK_GPIO_NUM,

  .xclk_freq_hz = 20000000,  // Frecuencia del reloj de la cámara
  .ledc_timer = LEDC_TIMER_0,
  .ledc_channel = LEDC_CHANNEL_0,

  // Formato JPEG para capturar y luego convertir a RGB
  .pixel_format = PIXFORMAT_JPEG,
  .frame_size = FRAMESIZE_QVGA,  // 320x240
  .jpeg_quality = 12,
  .fb_count = 1,
  .fb_location = CAMERA_FB_IN_PSRAM,
  .grab_mode = CAMERA_GRAB_WHEN_EMPTY,
};

// DECLARACIÓN DE FUNCIONES DE EDGE IMPULSE 
bool ei_camera_init(void);
void ei_camera_deinit(void);
bool ei_camera_capture(uint32_t img_width, uint32_t img_height, uint8_t *out_buf);


//  CONFIGURACIÓN INICIAL 
void setup() {
  Serial.begin(115200);

  // Inicializa bus I2C para pantalla OLED
  I2Cbus.begin(I2C_SDA, I2C_SCL, 100000);

  // Inicializa pantalla OLED
  if (!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.printf("ERROR: No se pudo iniciar la pantalla OLED.\n");
    while (true);
  }

  // Configuración de LEDs de estado
  pinMode(LED_AZUL, OUTPUT);
  pinMode(LED_VERDE, OUTPUT);
  pinMode(LED_ROJO, OUTPUT);

  // Al inicio: LED rojo encendido (sin detección)
  digitalWrite(LED_AZUL, LOW);
  digitalWrite(LED_VERDE, LOW);
  digitalWrite(LED_ROJO, HIGH);

  // Inicializa la cámara
  if (!ei_camera_init()) {
    Serial.println("ERROR: La cámara no pudo inicializarse");
  } else {
    Serial.println("Cámara inicializada correctamente");
  }

  // Mensaje de arranque
  display.clearDisplay();
  display.setCursor(0, 0);
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  display.print("Iniciando inferencia");
  display.display();
  ei_sleep(2000); // Pausa antes de comenzar
  display.clearDisplay();
}


// BUCLE PRINCIPAL 
void loop() {
  display.clearDisplay();

  // Pequeña pausa para Edge Impulse
  if (ei_sleep(5) != EI_IMPULSE_OK) return;

  // Se reserva memoria para la imagen RGB
  snapshot_buf = (uint8_t *)malloc(EI_CAMERA_RAW_FRAME_BUFFER_COLS * EI_CAMERA_RAW_FRAME_BUFFER_ROWS * EI_CAMERA_FRAME_BYTE_SIZE);
  if (!snapshot_buf) {
    Serial.println("ERROR: No hay memoria para el buffer de imagen");
    return;
  }

  // Estructura obligatoria para Edge Impulse
  ei::signal_t signal;
  signal.total_length = EI_CLASSIFIER_INPUT_WIDTH * EI_CLASSIFIER_INPUT_HEIGHT;
  signal.get_data = &ei_camera_get_data;

  // Captura de imagen desde la cámara
  if (!ei_camera_capture(EI_CLASSIFIER_INPUT_WIDTH, EI_CLASSIFIER_INPUT_HEIGHT, snapshot_buf)) {
    Serial.println("ERROR: No se pudo capturar imagen");
    free(snapshot_buf);
    return;
  }

  // Resultado donde Edge Impulse escribirá la detección
  ei_impulse_result_t result = { 0 };

  // Ejecuta el modelo de IA
  EI_IMPULSE_ERROR err = run_classifier(&signal, &result, debug_nn);
  if (err != EI_IMPULSE_OK) {
    Serial.printf("ERROR: Falló el clasificador (%d)\n", err);
    return;
  }

  // Info del tiempo de procesamiento
  Serial.printf("Predicciones (DSP: %d ms / Clasificación: %d ms)\n",
                result.timing.dsp, result.timing.classification);

#if EI_CLASSIFIER_OBJECT_DETECTION == 1

  bool bb_found = result.bounding_boxes[0].value > 0;
  bool detecto_led = false;
  bool detecto_bateria = false;

  // Recorre todos los objetos detectados
  for (size_t ix = 0; ix < result.bounding_boxes_count; ix++) {
    auto bb = result.bounding_boxes[ix];
    if (bb.value == 0) continue; // Salta detecciones vacías

    // Imprime en monitor serial
    Serial.printf(" %s (%.2f) [x:%u y:%u w:%u h:%u]\n",
                  bb.label, bb.value, bb.x, bb.y, bb.width, bb.height);

    // Muestra en pantalla OLED
    display.setCursor(0, 20 * ix);
    display.setTextSize(2);
    display.setTextColor(SSD1306_WHITE);
    display.print(bb.label);
    display.print("-");
    display.print(int(bb.value * 100));
    display.print("%");
    display.display();

    // Marca qué objeto se detectó
    if (strcmp(bb.label, "led") == 0) detecto_led = true;
    if (strcmp(bb.label, "bateria") == 0) detecto_bateria = true;
  }

  // Control de LEDs según detección
  if (bb_found) {
    if (detecto_led) {
      digitalWrite(LED_VERDE, HIGH);
      digitalWrite(LED_AZUL, LOW);
      digitalWrite(LED_ROJO, LOW);
    }
    else if (detecto_bateria) {
      digitalWrite(LED_AZUL, HIGH);
      digitalWrite(LED_VERDE, LOW);
      digitalWrite(LED_ROJO, LOW);
    }
    else {
      // Detectó otra cosa
      digitalWrite(LED_VERDE, LOW);
      digitalWrite(LED_AZUL, LOW);
      digitalWrite(LED_ROJO, HIGH);
    }
  }
  else {
    // No se detectó nada
    digitalWrite(LED_VERDE, LOW);
    digitalWrite(LED_AZUL, LOW);
    digitalWrite(LED_ROJO, HIGH);

    display.setCursor(0, 20);
    display.setTextSize(2);
    display.print("No detecto");
    display.display();
  }
#endif

  free(snapshot_buf); // Libera buffer de imagen
}


//  FUNCIONES DE EDGE IMPULSE 

// Inicializa la cámara ESP32-CAM
bool ei_camera_init(void) {
  if (is_initialised) return true;

  esp_err_t err = esp_camera_init(&camera_config);
  if (err != ESP_OK) {
    Serial.printf("Camera init failed: 0x%x\n", err);
    return false;
  }

  // Correcciones visuales para sensor OV3660
  sensor_t *s = esp_camera_sensor_get();
  if (s->id.PID == OV3660_PID) {
    s->set_vflip(s, 1);
    s->set_brightness(s, 1);
    s->set_saturation(s, 0);
  }

  is_initialised = true;
  return true;
}

// Libera la cámara
void ei_camera_deinit(void) {
  esp_err_t err = esp_camera_deinit();
  if (err != ESP_OK) {
    Serial.println("ERROR: No se pudo liberar la cámara");
    return;
  }
  is_initialised = false;
}

// Captura la imagen y la convierte a RGB
bool ei_camera_capture(uint32_t img_width, uint32_t img_height, uint8_t *out_buf) {

  if (!is_initialised) {
    Serial.println("ERROR: Cámara no inicializada");
    return false;
  }

  // Obtiene frame JPEG
  camera_fb_t *fb = esp_camera_fb_get();
  if (!fb) {
    Serial.println("ERROR: Fallo al capturar foto");
    return false;
  }

  // Convierte JPEG a RGB888
  bool converted = fmt2rgb888(fb->buf, fb->len, PIXFORMAT_JPEG, snapshot_buf);
  esp_camera_fb_return(fb);
  if (!converted) {
    Serial.println("ERROR en conversión JPEG -> RGB");
    return false;
  }

  // Si el tamaño es distinto, se redimensiona
  if (img_width != EI_CAMERA_RAW_FRAME_BUFFER_COLS || img_height != EI_CAMERA_RAW_FRAME_BUFFER_ROWS) {
    ei::image::processing::crop_and_interpolate_rgb888(
      out_buf,
      EI_CAMERA_RAW_FRAME_BUFFER_COLS,
      EI_CAMERA_RAW_FRAME_BUFFER_ROWS,
      out_buf,
      img_width,
      img_height
    );
  }

  return true;
}

// Convierte datos RGB a formato que Edge Impulse usa internamente
static int ei_camera_get_data(size_t offset, size_t length, float *out_ptr) {
  size_t pixel_ix = offset * 3;
  for (size_t i = 0; i < length; i++) {
    out_ptr[i] = (snapshot_buf[pixel_ix + 2] << 16)
               + (snapshot_buf[pixel_ix + 1] << 8)
               + snapshot_buf[pixel_ix];
    pixel_ix += 3;
  }
  return 0;
}

#if !defined(EI_CLASSIFIER_SENSOR) || EI_CLASSIFIER_SENSOR != EI_CLASSIFIER_SENSOR_CAMERA
#error "Invalid model for current sensor"
#endif
